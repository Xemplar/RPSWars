<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GdxTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/app_white</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textViewStyle">@style/MuseoTextViewStyle</item>
        <item name="buttonStyle">@style/MuseoButtonStyle</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>