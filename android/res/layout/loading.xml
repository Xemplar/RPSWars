<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_centerHorizontal="true" android:layout_marginTop="100dp"/>
    <TextView
            android:text="@string/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/status" android:layout_below="@id/progressBar"
            android:gravity="clip_vertical|center_horizontal" android:layout_marginTop="20dp"/>
</RelativeLayout>